<UserControl x:Class="Autosampler_UI.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Autosampler_UI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- ✅ 모든 라운드 버튼에 공통 적용할 스타일 -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ✅ 둥근 콤보박스 스타일 -->
        <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border CornerRadius="5"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>

                                <!-- ✅ 드롭다운 버튼 (화살표) -->
                                <ToggleButton x:Name="ToggleButton"
                                              Grid.Column="2"
                                              Focusable="false"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press"
                                              Background="Transparent"
                                              BorderThickness="0">
                                    <Path x:Name="Arrow"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Data="M 0 0 L 4 4 L 8 0 Z"
                                          Fill="Black"/>
                                </ToggleButton>

                                <!-- ✅ 텍스트 표시 영역 -->
                                <ContentPresenter x:Name="ContentSite"
                                                  Grid.Column="0"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  Margin="5,3,5,3"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left" />

                                <!-- ✅ 드롭다운 팝업 -->
                                <Popup x:Name="Popup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderBrush="Gray"
                                            BorderThickness="1"
                                            CornerRadius="5" Width="180" Height="100">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"
                                                        KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <!-- ✅ 2행 × 2열 레이아웃 정의 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <!-- 상단 -->
            <RowDefinition Height="100" />
            <!-- 첫 번째 라인 -->
            <RowDefinition Height="10" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
            <!-- 두 번째 라인 -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <!-- 왼쪽 -->
            <ColumnDefinition Width="10" />
            <!-- 구분 여백 -->
            <ColumnDefinition Width="*" />
            <!-- 오른쪽 -->
        </Grid.ColumnDefinitions>


        <!-- ✅ 왼쪽 상단 (Rack Selection) -->
        <Border Grid.Row="0" Grid.Column="0" Background="White">
            <Grid Margin="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="180" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="1"
                           Text="Rack Selection"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="Black"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"/>

                <!-- ✅ 콤보박스 -->
                <Border Grid.Column="2"
                        Width="150"
                        Height="30"
                        CornerRadius="5"
                        Background="White"
                        BorderBrush="Gray"
                        BorderThickness="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <ComboBox x:Name="RackSelectionComboBox"
                              Style="{StaticResource RoundedComboBoxStyle}"
                              Width="150"
                              Height="30"
                              Background="Transparent"
                              Foreground="Black"
                              BorderThickness="0"
                              VerticalContentAlignment="Center"
                              SelectionChanged ="RackSelectionChanged"
                              SelectedIndex="0">
                        <ComboBoxItem Content="15ml tube"/>
                        <ComboBoxItem Content="50ml tube"/>
                    </ComboBox>
                </Border>
            </Grid>
        </Border>

        <!-- ✅ 오른쪽 상단 (Start Sampling 버튼) -->
        <Border Grid.Row="0" Grid.Column="2" BorderBrush="LightGray" BorderThickness="0">
            <Grid>
                <Button x:Name="StartSamplingButton"
                        Content="Start Sampling"
                        Width="270" Height="30"
                        Background="#1E71B8"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        BorderBrush="DarkBlue"
                        BorderThickness="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- ✅ 메인 왼쪽 (Rack 화면 표시 영역) -->
        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="4">
            <ContentControl x:Name="RackContentContol"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch" />
        </Border>

        <!-- ✅ 메인 오른쪽 (상태 표시 + 버튼) -->
        <Border Grid.Row="1" Grid.Column="2" Background="#F2F2F2" CornerRadius="8" Padding="1" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- 상태 표시 -->
                    <ColumnDefinition Width="10" />
                    <!-- 구분선 -->
                    <ColumnDefinition Width="140" />
                    <!-- 버튼 영역 -->
                </Grid.ColumnDefinitions>

                <!-- ✅ 상태 표시 StackPanel -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                    <!-- Non selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="14" Height="14" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock Text="Non selection" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>

                    <!-- Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="14" Height="14" Fill="Blue" Margin="0,0,8,0"/>
                        <TextBlock Text="Selection" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>

                    <!-- Sampling Complete -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="14" Height="14" Fill="Orange" Margin="0,0,8,0"/>
                        <TextBlock Text="Sampled" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- ✅ 세로 구분선 -->
                <Border Grid.Column="1" Width="1" Background="LightGray" />

                <!-- ✅ 버튼 StackPanel -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- All Able 버튼 -->
                    <Button x:Name="AllAbleButton"
                            Content="All Able"
                            Width="120" Height="36"
                            Background="#1E71B8" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0" Margin="0,0,0,10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- All Disable 버튼 -->
                    <Button x:Name="AllDisableButton"
                            Content="All Disable"
                            Width="120" Height="36"
                            Background="#1E71B8" Foreground="White"
                            FontSize="16" FontWeight="Bold"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>



















        <!-- ✅ 메인 오른쪽 (상태 표시 + 버튼) -->
        <Border Grid.Row="3" Grid.Column="2" Grid.RowSpan="2" Background="#F2F2F2" CornerRadius="8" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- 상태 표시 -->
                    <ColumnDefinition Width="10" />
                    <!-- 구분선 -->
                    <ColumnDefinition Width="120" />
                    <!-- 버튼 영역 -->
                </Grid.ColumnDefinitions>

                <!-- ✅ 상태 표시 StackPanel -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                    <!-- Non selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="14" Height="14" Fill="Gray" Margin="0,0,8,0"/>
                        <TextBlock Text="Tray Ready" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>

                    <!-- Selection -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="14" Height="14" Fill="Blue" Margin="0,0,8,0"/>
                        <TextBlock Text="Selection" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>

                    <!-- Sampling Complete -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <Ellipse Width="14" Height="14" Fill="Orange" Margin="0,0,8,0"/>
                        <TextBlock Text="Sampling Complete" VerticalAlignment="Center" FontSize="14"/>
                    </StackPanel>
                </StackPanel>

                <!-- ✅ 세로 구분선 -->
                <Border Grid.Column="1" Width="1" Background="LightGray" />

                <!-- ✅ 버튼 StackPanel -->
                <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- All Able 버튼 -->
                    <Button x:Name="AllAbleButton1"
                     Content="All Able"
                     Width="120" Height="36"
                     Background="#1E71B8" Foreground="White"
                     FontSize="16" FontWeight="Bold"
                     BorderThickness="0" Margin="0,0,0,10">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- All Disable 버튼 -->
                    <Button x:Name="AllDisableButton1"
                     Content="All Disable"
                     Width="120" Height="36"
                     Background="#1E71B8" Foreground="White"
                     FontSize="16" FontWeight="Bold"
                     BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="5"
                                 Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
